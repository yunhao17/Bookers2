<p id="notice"></p>
<div class="container px-5 px-sm-0">
    <div class="row">
          <%= render 'books/list', user: @user %>
          <div class="col-md-8 offset-md-1">
              <h2>Book detail</h2>
              <table class="table">
                  <tbody>
                      <tr>
                         <td>
                          <%= link_to user_path(@books.user.id) do %>
             　            <%= attachment_image_tag @books.user, :profile_image, :fill,40,40, fallback: "no_image.jpg" %><br>
             　            <%= @books.user.name %>
                          <% end %>
                         </td>
                         <td><%= link_to @books.title ,@books_path %></td>
                         <td><%= @books.body %></td>
                         <% if @books.user.id == current_user.id %>
                         <td><%= link_to "Edit", edit_book_path(@books) , class:"btn btn-sm btn-success"%></td>
                         <td>
                         <%= link_to "Destroy", book_path(@books),class:"btn btn-sm btn-danger", method: :delete,"data-confirm" => "本当に削除しますか？" %>
                         <% end %>
                         </td>
                        <% if @books.favorited_by?(current_user) %>
                        <td>
                         <%= link_to book_favorites_path(@books), class:"btn-danger" ,method: :delete do %>
                         ♥<%= @books.favorites.count %> 
                         <% end %>
                        </td>
                        <% else %>
                        <td>
                         <%= link_to book_favorites_path(@books), method: :post do %>
                         ♡<%= @books.favorites.count %> 
                         <% end %>
                        </td>
                        <% end %>
                         <td>コメント数：<%= @books.book_comments.count %></td>
                      </tr>
                  </tbody>
              </table>
              <table class="comments">
               <% @books.book_comments.each do |book_comment| %>
               <tbody>
                   <tr>
                       <td>
                        <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
                       </td>
                       <td><%= book_comment.comment %></td>
                       <td>
                        <% if book_comment.user == current_user %>
                        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class:"btn btn-sm btn-danger", method: :delete %>
                        <% end %>
                       </td>
                   </tr>
               </tbody>
               <% end %>
              </table>
              <div class="new-comment">
               <%= form_with(model:[@books, @book_comment], local: true) do |f| %>
               <%= f.text_area :comment %>
               <%= f.submit "送信" %>
               <% end %>
              </div>
          </div>
    </div>
</div>    