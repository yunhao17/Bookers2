<h2>Book search for </h2>

<table class="table table-hover table inverse">
  <% if @range == "User" %>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
          <td><%= link_to user.name , user_path(user.id)%></td>
        </tr>
      <% end %>
  </tbody>
  <% else %>
   <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
   </thead>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
          <td><%= link_to book.title , book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
  </tbody>
  <% end %>
</table>